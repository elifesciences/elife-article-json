        "authorLine": "Gertrudis Perea et al", 
        "title": "Activity-dependent switch of GABAergic inhibition into glutamatergic excitation in astrocyte-neuron networks", 
        "published": "2016-12-24T00:00:00Z", 
        "versionDate": "2016-12-24T00:00:00Z", 
        "volume": 5, 
        "elocationId": "e20362", 
        "pdf": "https://publishing-cdn.elifesciences.org/20362/elife-20362-v1.pdf", 
